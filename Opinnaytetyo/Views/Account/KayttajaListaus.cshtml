@model IEnumerable<Opinnaytetyo.Models.Kayttajatunnukset>

@{
    ViewBag.Title = "KayttajaListaus";
}
<link href="~/tyyli.css" rel="stylesheet" />
<h2>KayttajaListaus</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Kayttajatunnus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salasana)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RekisteröiytmisPVM)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Kayttajatunnus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salasana)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RekisteröiytmisPVM)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.KayttajatunnusID }) |
            @Html.ActionLink("Details", "Details", new { id=item.KayttajatunnusID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.KayttajatunnusID })
        </td>
    </tr>
}

</table>
<h6>Käyttäjiä yhteensä:@Model.Count() </h6>
